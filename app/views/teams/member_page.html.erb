<div class="hero min-h-full bg-center bg-cover mx-auto"
  style="background-image: url(<%= asset_path("team_bg.webp") %>);">
  <div class="hero-overlay bg-opacity-40"></div>
  <% if @active_team.present? %>
    <!-- 現在活動中のチーム情報を表示 -->
    <%= render 'teams/team_details', team: @active_team %>
  <% else %>
    <%= render 'teams/team_details', team: @previous_team %>
  <% end %>
</div>
