<div class="min-h-screen bg-base-100">
  <div class="container flex justify-start mx-auto py-4">
    <% if logged_in? %>
      <%= button_to "仲間を募集する", new_team_path, method: :get, class: 'btn btn-success btn-lg' %> 
    <% end %>
    <div class="dropdown dropdown-right ml-10">
      <div tabindex="0" role="button" class="btn btn-secondary btn-lg">くわしくさがす</div>
      <div tabindex="0" class="dropdown-content z-[1] card card-normalcompact w-72 p-2 shadow bg-neutral-content opacity-75 text-primary-content ">
        <%= render 'teams/search_form' %> 
      </div>
    </div>
  </div>
  <div class="container mx-auto py-4">
    <%= turbo_frame_tag "teams" do %>
      <% if @teams.empty? %>
        <div class="flex-left h-full">
          <div role="alert" class="alert">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
            <span class="text-gray-600">
              まだ仲間の募集がありません。
            </span>
          </div>
        </div>
      <% else %>
        <div class="grid grid-cols-4 gap-6">
          <%= render @teams %>
        </div>
      <% end %>
      <!-- ページネーション -->
      <div class="flex justify-center text-center text-md" >
        <%= paginate @teams %>
      </div>
    <% end %>
  </div> 
</div>
