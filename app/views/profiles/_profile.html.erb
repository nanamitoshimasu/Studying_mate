<h1 class="card-title"><%= t('.title') %></h1>
  <div class="avatar">
    <div class="w-24 rounded-full">  
      <%= image_tag image_path(user.avatar.url), size: '200x200' %>
    </div>
  </div>
  <hr class="my-5">
  <div>
    <h3 class="mb-0 text-lg font-semibold text-gray-700" ><%= t(User.human_attribute_name(:name)) %></h3>
    <p class="mb-4">
      <%= user.name %>
    </p>
    <h3 class="mb-0 text-lg font-semibold text-gray-700"><%= t(User.human_attribute_name(:description)) %></h3>
    <p class="mb-4">
      <% if user.description.present? %>
        <%= user.description %>
      <% else %>
        No Data
      <% end %>
    </p>
  </div>
