<div class="min-h-screen bg-base-100 ">
  <div class="flex justify-start mx-auto p-2">
    <%= link_to :back do %>
      <button class="btn btn-link no-underline">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="w-4 h-4">
          <path fill-rule="evenodd" d="M12.5 9.75A2.75 2.75 0 0 0 9.75 7H4.56l2.22 2.22a.75.75 0 1 1-1.06 1.06l-3.5-3.5a.75.75 0 0 1 0-1.06l3.5-3.5a.75.75 0 0 1 1.06 1.06L4.56 5.5h5.19a4.25 4.25 0 0 1 0 8.5h-1a.75.75 0 0 1 0-1.5h1a2.75 2.75 0 0 0 2.75-2.75Z" clip-rule="evenodd" />
        </svg>
        もどる
      </button>
    <% end %>
  </div>
  <div class="max-w-7xl mx-auto grid grid-cols-2 items-start">
    <div class="flex-1">
      <div class="card bg-base-200 shadow-lg lg:w-full xl:w-3/4">
        <div class="card-body">
          <h1 class="card-title"><%= t '.title' %></h1>
          <%= render 'profile', user: current_user %>
          <div class="card-actions justify-end">
            <%= button_to t('defaults.edit'), edit_profile_path, method: :get, class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    </div>
    <div class="flex-1">
      <%= render 'total_time', user:current_user %>
      <%= render 'saved_animal_images', user:current_user %>
    </div>
  </div>
</div>
